{
    "name": "app",
    "type": "module",
    "scripts": {
        "dev": "vite --mode=development",
        "build": "tsc -b && vite build",
        "deploy:stg": "vite build --mode=staging && wrangler --env=staging deploy",
        "deploy:stg:secret": "wrangler --env=staging secret bulk .env.staging.local",
        "deploy:prod": "vite build --mode=production && wrangler --env=production deploy",
        "deploy:prod:secret": "wrangler --env=production secret bulk .env.production.local"
    },
    "dependencies": {
        "@auth0/auth0-react": "^2.13.0",
        "@hono/zod-validator": "^0.7.6",
        "@libsql/client": "^0.17.0",
        "drizzle-orm": "^0.45.1",
        "hono": "^4.11.9",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@cloudflare/vite-plugin": "^1.24.0",
        "@cloudflare/workers-types": "^4.20260210.0",
        "@tanstack/react-query": "^5.90.21",
        "@tanstack/react-query-devtools": "^5.91.3",
        "@tanstack/react-router": "^1.159.5",
        "@tanstack/router-devtools": "^1.159.5",
        "@tanstack/router-plugin": "^1.159.5",
        "@types/pg": "^8.16.0",
        "@types/react": "^19.2.13",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.4",
        "drizzle-kit": "^0.31.9",
        "vite": "^7.3.1",
        "wrangler": "^4.64.0"
    }
}